@model KieuThiHienBTH2.Models.Preson

@{
    ViewData["Title"] = "Edit";
}

<h4>Sửa thông tin Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PresonID">
            <div class="form-group">
                <label asp-for="PresonName" class="control-label"></label>
                <input asp-for="PresonName" class="form-control" />
                <span asp-validation-for="PresonName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="PresonAddress" class="control-label"></label>
                <input asp-for="PresonAddress" class="form-control">
                <span asp-validation-for="PresonAddress" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Danh sách Person</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
