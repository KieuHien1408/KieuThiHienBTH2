@model IEnumerable<KieuThiHienBTH2.Models.Customer>
<p>
    <a class="btn btn-primary" asp-action="Create">Create a new Customer</a>
</p>
<table class=" table table-all">
    <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Customer Age</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.CustomerID)</td>
            <td>@Html.DisplayFor(m => item.CustomerName)</td>
            <td>@Html.DisplayFor(m => item.CustomerAddress)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerID">Sửa</a>|
                <a asp-action="Delete" asp-route-id="@item.CustomerID">Xóa</a>
            </td>
        </tr>
    }
</table>